{
  "name": "Cadnip.jl Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0",
      "JULIA_VERSION": "1.11",
      "OPENVAF_VERSION": "osdi_0.4-146-g75df7b36",
      "VACASK_VERSION": "0.3.2",
      "VACASK_TAG": "_0.3.2"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "julialang.language-julia",
        "eamodio.gitlens"
      ],
      "settings": {
        "julia.executablePath": "/usr/local/bin/julia",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=cadnip-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=cadnip-claude-config-${devcontainerId},target=/home/node/.claude,type=volume",
    "source=cadnip-julia-depot-${devcontainerId},target=/opt/julia-depot,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "JULIA_DEPOT_PATH": "/opt/julia-depot",
    "JULIA_NUM_THREADS": "auto",
    "JULIA_PROJECT": "@.",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand"
}
